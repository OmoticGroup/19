        <record id="hotel_booking_documents_list_view" model="ir.ui.view">
            <field name="name">hotel.booking.documents.list.view</field>
            <field name="model">hotel.booking.documents</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Booking Documents">
                    <field name="name"/>
                    <field name="document_type_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>

        <record id="hotel_booking_documents_form_view" model="ir.ui.view">
            <field name="name">hotel.booking.documents.form.view</field>
            <field name="model">hotel.booking.documents</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group col="2">
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="document_type_ids" widget="many2many_tags" options="{'no_create': True,}" required="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        
