<odoo>
    <record id="sale_order_cancel_view_form" model="ir.ui.view">
        <field name="name">sale.order.cancel.form</field>
        <field name="model">sale.order.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel Sale Order">
                <group>
                    <field name="order_id" invisible="1"/>
                    <field name="show_reason_field" invisible="1"/>
                    <field name="body" widget="html" placeholder="Reason for cancellation"/>
                    <field name="cancellation_reason" 
                           invisible="not show_reason_field" 
                           required="show_reason_field" 
                           placeholder="--- Reason for cancellation ---"/>
                </group>
                <footer>
                    <button string="Cancel Order" name="action_cancel" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>